{
  "name": "aereal.github.com",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "deploy": "firebase deploy --only hosting",
    "build": "next build",
    "dev": "next dev",
    "start": "next start",
    "generate-content-model-defs": "contentful-typescript-codegen --output src/@types/@aereal/portfolio.d.ts",
    "type-check": "tsc -p . --noEmit",
    "type-check:watch": "tsc -p . --noEmit -w",
    "test": "run-p -l -s type-check build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aereal/aereal.github.com.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aereal/aereal.github.com/issues"
  },
  "homepage": "https://github.com/aereal/aereal.github.com#readme",
  "devDependencies": {
    "@contentful/rich-text-types": "^14.1.0",
    "@types/react": "16.7.20",
    "@types/react-dom": "16.0.11",
    "@types/styled-components": "4.1.6",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "babel-plugin-styled-components": "1.10.7",
    "contentful": "^7.14.0",
    "contentful-management": "^5.13.0",
    "contentful-typescript-codegen": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "firebase-tools": "^7.15.0",
    "next": "^9.3.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "react-is": "^16.13.0",
    "styled-components": "5.0.1",
    "typescript": "3.5.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:react/recommended",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ],
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-hooks"
    ],
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "createDefaultProgram": true,
      "project": "./tsconfig.json",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "no-use-before-define": "off",
      "@typescript-eslint/no-use-before-define": [
        "warn",
        {
          "functions": false,
          "classes": false,
          "variables": false,
          "typedefs": false
        }
      ],
      "@typescript-eslint/array-type": [
        "warn",
        {
          "default": "array-simple",
          "readonly": "array-simple"
        }
      ],
      "@typescript-eslint/interface-name-prefix": [
        "error",
        {
          "prefixWithI": "never"
        }
      ],
      "@typescript-eslint/no-unused-vars": 0,
      "react/prop-types": 0
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "jsxBracketSameLine": true
  },
  "babel": {
    "presets": ["next/babel"],
    "plugins": [
      [
        "styled-components",
        { "ssr": true }
      ]
    ]
  }
}
