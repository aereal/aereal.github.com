{
  "name": "aereal.github.com",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "deploy": "firebase deploy --only hosting",
    "build": "next build",
    "dev": "next dev",
    "start": "next start",
    "export": "next export -o dist",
    "predeploy": "run-s -l -s build export",
    "generate-content-model-defs": "contentful-typescript-codegen --output src/@types/@aereal/portfolio.d.ts",
    "type-check": "tsc -p . --noEmit",
    "type-check:watch": "tsc -p . --noEmit -w",
    "test": "run-p -l -s build jest",
    "jest": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aereal/aereal.github.com.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aereal/aereal.github.com/issues"
  },
  "homepage": "https://github.com/aereal/aereal.github.com#readme",
  "dependencies": {
    "@contentful/rich-text-html-renderer": "14.1.1",
    "@contentful/rich-text-types": "14.1.1",
    "contentful": "7.14.6",
    "react": "16.13.1",
    "next": "9.5.3",
    "styled-components": "5.2.0"
  },
  "devDependencies": {
    "@aereal/eslint-config": "^0.1.4",
    "@types/jest": "26.0.14",
    "@types/react": "16.9.32",
    "@types/react-dom": "16.9.8",
    "@types/styled-components": "5.1.3",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@typescript-eslint/parser": "4.3.0",
    "babel-plugin-styled-components": "1.11.1",
    "contentful-management": "6.1.2",
    "contentful-typescript-codegen": "3.2.1",
    "eslint": "7.10.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.6.3",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.3",
    "eslint-plugin-react-hooks": "4.1.2",
    "firebase-tools": "8.11.2",
    "jest": "26.4.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "react-dom": "16.13.1",
    "react-is": "16.13.1",
    "ts-jest": "26.4.1",
    "typescript": "4.0.3"
  },
  "eslintConfig": {
    "extends": [
      "@aereal/eslint-config/presets/react-typescript"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "createDefaultProgram": true,
      "project": "./tsconfig.json",
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "jsxBracketSameLine": true
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true
        }
      ]
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(\\.|/)(test|spec)\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  }
}
