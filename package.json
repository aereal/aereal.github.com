{
  "name": "aereal.github.com",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "gatsby build",
    "start": "gatsby develop",
    "gql-gen": "gql-gen",
    "type-check": "tsc -p . --noEmit",
    "type-check:watch": "tsc -p . --noEmit -w",
    "test": "run-p -l -s type-check build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aereal/aereal.github.com.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aereal/aereal.github.com/issues"
  },
  "homepage": "https://github.com/aereal/aereal.github.com#readme",
  "devDependencies": {
    "@types/react": "16.7.20",
    "@types/react-dom": "16.0.11",
    "@types/react-helmet": "5.0.15",
    "@types/styled-components": "4.1.6",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "babel-plugin-styled-components": "1.10.7",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "gatsby": "2.19.37",
    "gatsby-plugin-google-analytics": "2.1.37",
    "gatsby-plugin-styled-components": "3.1.20",
    "gatsby-plugin-typescript": "2.2.2",
    "gatsby-source-filesystem": "2.1.52",
    "gatsby-transformer-yaml": "2.2.26",
    "graphql-code-generator": "0.18.2",
    "graphql-codegen-add": "0.18.2",
    "graphql-codegen-typescript-client": "0.18.2",
    "graphql-codegen-typescript-common": "0.18.2",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "react-helmet": "5.2.1",
    "styled-components": "5.0.1",
    "typescript": "3.5.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:react/recommended",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ],
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-hooks"
    ],
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "createDefaultProgram": true,
      "project": "./tsconfig.json",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "no-use-before-define": "off",
      "@typescript-eslint/no-use-before-define": [
        "warn",
        {
          "functions": false,
          "classes": false,
          "variables": false,
          "typedefs": false
        }
      ],
      "@typescript-eslint/array-type": [
        "warn",
        {
          "default": "array-simple",
          "readonly": "array-simple"
        }
      ],
      "@typescript-eslint/interface-name-prefix": [
        "error",
        {
          "prefixWithI": "never"
        }
      ],
      "@typescript-eslint/no-unused-vars": 0,
      "react/prop-types": 0
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "jsxBracketSameLine": true
  }
}
